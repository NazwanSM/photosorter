{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "PhotoSorter",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "readDir": true,
        "scope": ["**"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.nazwan.photosorter",
      "targets": ["nsis", "msi"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "shortDescription": "A fast photo sorting application",
      "longDescription": "PhotoSorter helps you quickly organize photos into Landscape, Portrait, and Reject folders using keyboard shortcuts.",
      "category": "Utility",
      "copyright": "Copyright Â© 2024 Nazwan",
      "windows": {
        "webviewInstallMode": {
          "type": "offlineInstaller"
        },
        "wix": null,
        "nsis": {
          "installerIcon": "icons/icon.ico",
          "headerImage": null,
          "sidebarImage": null,
          "license": null,
          "installMode": "currentUser"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "PhotoSorter",
        "fullscreen": false,
        "resizable": true,
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true
      }
    ]
  }
}